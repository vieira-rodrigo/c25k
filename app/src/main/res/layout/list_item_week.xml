<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/week_item_padding">

    <TextView
        android:id="@+id/text_view_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/tv_week_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_week_item_size"
            android:layout_marginEnd="@dimen/tv_week_item_margin_end" />

        <TextView
            android:id="@+id/text_view_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_week_item_size"
            android:layout_marginEnd="@dimen/tv_week_item_margin_end" />

        <TextView
            android:id="@+id/text_view_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_week_item_size"
            android:layout_marginEnd="@dimen/tv_week_item_margin_end" />
    </LinearLayout>
</LinearLayout>